---
import LinkedIn from "../icons/LinkedIn.astro";
import MailIcon from "../icons/Mail.astro";
import MobileMessageIcon from "../icons/MobileMessage.astro";

const methods = [
  {
    Icon: LinkedIn,
    label: "LinkedIn",
    link: "www.linkedin.com/in/daniel-mass-jamet-a50b70316",
  },
  {
    Icon: MailIcon,
    label: "danymassmcf@gmail.com",
    link: "mailto:danymassmcf@gmail.com",
  },
];
---

<section id="contacto" class="mt-40 pb-32">
  <div
    data-aos="zoom-out"
    data-aos-duration="700"
    class="textGlow font-bold text-4xl items-center w-fit m-auto lg:text-5xl mb-8 flex"
  >
    <MobileMessageIcon class="mr-4 size-14" />
    <h2>Contacto</h2>
  </div>
  <ul class="m-auto w-fit space-y-2">
    {
      methods.map(({ link, label, Icon }) => (
        <li class="w-max m-auto">
          <a
            data-aos="fade"
            data-aos-duration="1000"
            href={link}
            class="my-8 flex items-center text-xl px-4 py-1 rounded-full shadow-xl shadow-black/20 hover:-translate-y-1 ease-in-out mx-auto w-max backdrop-blur-xl border-2 border-white/10 hover:bg-black/20 transition group"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Icon class="size-8 mr-2 group-hover:-translate-y-1 transition" />
            <span class="text-lg">{label}</span>
          </a>
        </li>
      ))
    }
  </ul>
</section>
